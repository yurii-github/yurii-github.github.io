{
    "require": {
        "php": "~8.3",
        "ext-json": "*",
        "friendsofphp/php-cs-fixer": "^3.68",
        "slim/slim": "^4.14",
        "illuminate/view": "^11.37",
        "guzzlehttp/psr7": "^2.7",
        "http-interop/http-factory-guzzle": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "app\\": "src/"
        }
    },
    "scripts": {
        "lint": [
            "php-cs-fixer check --verbose --diff --ansi"
        ],
        "fix": [
            "php-cs-fixer fix --verbose --diff --ansi"
        ]
    }
}
